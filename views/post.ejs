<html>
    <head>
    	<title><%= data.title %> - Virginia Alonso</title>
    	<link href="/style.css" rel="stylesheet" type="text/css"/>
    </head>

    <body>    
      <p>
        <div>
          <a href="/">
            <img src="http://sphotos-c.ak.fbcdn.net/hphotos-ak-snc6/215520_10150215695701253_2755497_n.jpg" class="logo1">
        </div>
        <font color="#424242">TNTL</font><font color="#FFBF00">N</font>
          </a>
     </p>
    
    <h1><%= data.title %>
      <% if (user) { %>
        <span class="delete" data-id="<%= data._id %>">&nbsp;&times;</span><a href="/edit/<%= data._id %>"> (edit)</a>
      <% } %>
    </h1>
    <p id="content">
      <%- data.post.replace(/\r\n|\r|\n/g,"<br />") %>
    </p>
    <p>
      <abbr title="<%- data.last_edit %>">[<%- data.fromNow %>]</abbr>
    </p>
    
    
    <div align="center"> ( Go <a style="color: #FFBF00" HREF="/">back </a>) </div>

    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="/autoresize.jquery.js"></script>

    <script type="text/javascript" charset="utf-8">
    jQuery(document).ready(function($) {
      $(".delete").on('click', function(){
      
        if (!confirm("Are you sure you want to delete this?")) return;
        $.ajax({
          type: "DELETE",
          url: "/post/<%= data._id %>",
          success: function(data) {
            window.location = "/";
          },
        });
      });  
    });
    </script>
    </body>
</html>